<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="../../favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="/styles/login.css">
    <title>Register</title>
</head>

<body>
    <section class="loginpage">
        <div class="login">
            <div class="image">
                <img draggable="false"  src="/images/album2.jpg" alt="">
            </div>
            <div class="form">
                <form class="formlogin" action="/auth/register" method="post" id="form">
                    <div class="loginheading">
                        <h1>Register</h1>
                    </div>
                    <div class="error_success_message">
                        <% if (error_msg && error_msg.length) { %>
                            <p>
                                <%= error_msg %>
                            </p>
                            <% } else { %>
                                <p>
                                    <%= success_msg %>
                                </p>
                                <% } %>
                    </div>
                    <div class="email">
                        <input type="text" placeholder="Enter Your Name" name="name" id="name" autofocus required>
                    </div>
                    <div class="email">
                        <input type="email" placeholder="Enter Your Email" name="email" id="email" required>
                    </div>
                    <div class="email">
                        <input type="password" placeholder="Enter Your password" name="password" id="password" required>
                    </div>
                    <div class="email">
                        <input type="password" placeholder="Enter Your password" name="confirm_password"
                            id="confirm_password" required>
                    </div>
                    <div class="btn">
                        <button type="submit" class="submit">Submit</button>
                    </div>
                    <div class="text1">
                        <p>Already Registered? <a href="/auth/login">Login</a></p>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <script src="/javascript/auth.js">
    </script>
</body>


</html>