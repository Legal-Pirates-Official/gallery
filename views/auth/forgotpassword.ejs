    <section class="loginpage">
        <div class="login">
            <div class="image">
                <img src="/images/album2.jpg" alt="">
            </div>
            <div class="form">
                <form class="formlogin" action="/auth/forgotpassword" method="POST" id="form">
                    <div class="loginheading">
                        <h1>Forgot Password</h1>
                    </div>
                    <div>
                        <% if (error_msg && error_msg.length) { %>
                            <p>
                                <%= error_msg %>
                            </p>
                            <% } else { %>
                                <p>
                                    <%= success_msg %>
                                </p>
                                <% } %>
                    </div>
                    <div class="email">
                        <input type="email" placeholder="Enter Your Email" name="email" id="email" required>
                    </div>
                    <div class="btn">
                        <button type="submit" class="submit">Submit</button>
                    </div>
                    <div class="text">
                        <p>Already Registered? <a href="/auth/login">Login</a></p>
                    </div>
                    <div class="text">
                        <p>Not Registered Yet? <a href="/auth/register">Register</a></p>
                    </div>
                </form>
            </div>
        </div>
    </section>


